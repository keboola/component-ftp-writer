{
  "type": "object",
  "title": "SFTP / FTP writer",
  "required": [
    "protocol",
    "hostname",
    "port",
    "user",
    "#pass"
  ],
  "properties": {
    "protocol": {
      "enum": [
        "SFTP",
        "FTP",
        "Ex-FTPS",
        "Im-FTPS"
      ],
      "options": {
        "enum_titles": [
          "SFTP",
          "FTP",
          "FTPS (Explicit)",
          "FTPS (Implicit)"
        ]
      },
      "type": "string",
      "title": "Protocol",
      "propertyOrder": 10,
      "default": "SFTP"
    },
    "port": {
      "type": "integer",
      "default": 22,
      "title": "Host port",
      "options": {
        "tooltip": "The default port number is 22 for SFTP, 21 for FTP, and 990 for FTPS."
      },
      "propertyOrder": 20
    },
    "user": {
      "type": "string",
      "title": "User name",
      "propertyOrder": 30
    },
    "#pass": {
      "type": "string",
      "title": "Password",
      "format": "password",
      "propertyOrder": 40
    },
    "ssh": {
      "type": "object",
      "format": "ssh-editor",
      "options": {
        "only_keys": true,
        "dependencies": {
          "protocol": "SFTP"
        }
      }
    },
    "#passphrase": {
      "type": "string",
      "title": "Passphrase (Optional)",
      "description": "Passphrase for key",
      "format": "password",
      "propertyOrder": 50
    },
    "hostname": {
      "type": "string",
      "title": "Host URL",
      "propertyOrder": 10
    },
    "disabled_algorithms": {
      "type": "string",
      "title": "Algorithms to disable (Optional)",
      "description": "The disabled_algorithms for example: \"{'pubkeys': ['rsa-sha2-256', 'rsa-sha2-512']}\" Find additional details at <a href='https://docs.paramiko.org/en/latest/api/transport.html?highlight=disabled_algorithms'>Paramiko documentation</a>.",
      "propertyOrder": 60,
      "options": {
        "dependencies": {
          "protocol": "SFTP"
        }
      }
    },
    "banner_timeout": {
      "type": "integer",
      "default": 15,
      "title": "Banner timeout (Optional)",
      "description": "Timeout in seconds to wait for SSH banner, default value is 15. This parameter can solve issues related to establishing a connection, caused, for example, by server overload or high network latency.",
      "propertyOrder": 70,
      "options": {
        "dependencies": {
          "protocol": "SFTP"
        }
      }
    },
    "test_connection": {
      "type": "button",
      "format": "test-connection",
      "propertyOrder": 500
    },
    "passive_mode": {
      "type": "boolean",
      "title": "Passive mode",
      "format": "checkbox",
      "default": false,
      "propertyOrder": 80,
      "options": {
        "dependencies": {
          "protocol": [
            "FTP",
            "Ex-FTPS",
            "Im-FTPS"
          ]
        }
      }
    },
    "debug": {
      "type": "boolean",
      "title": "Debug mode",
      "format": "checkbox",
      "default": false,
      "description": "If enabled, the component will produce detailed logs",
      "propertyOrder": 90
    }
  }
}
